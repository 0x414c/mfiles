<Window x:Name="clipboardWindow"
        x:Class="Files.ClipboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fsops="clr-namespace:FSOps;assembly=FSOps"
        xmlns:rl="clr-namespace:ResourceLibrary;assembly=ResourceLibrary"
        
        Title="Clipboard" 
        Height="300" Width="200" MinWidth="100" MinHeight="100"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False" ShowActivated="False" Icon="Graphics/floppy-512.ico"
        Closing="clipboardWindow_OnClosing" >

    <DockPanel x:Name="clipboardWindowDockPanel">
        <Button x:Name="clearButton" DockPanel.Dock="Bottom"
                Height="24"
                Padding="0,0,0,2" 
                VerticalAlignment="Bottom"
                Content="Clear" Click="clearButton_OnClick"/>

        <ListView x:Name="clipboardContentsListView" 
                  Style="{rl:GetStyle ResourceKey=listviewfix}"
                  BorderThickness="0">
            <ListView.ItemsSource>
                <Binding Path="ClipboardStack" IsAsync="True" UpdateSourceTrigger="PropertyChanged" />
            </ListView.ItemsSource>
        </ListView>

    </DockPanel>

</Window>
