            <Trigger Property="IsExpanded" Value="True">
                <Trigger.Setters>
                    <Setter Property="Foreground" Value="Blue"/>
                    <Setter Property="FontStyle" Value="Italic"/>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>-->
    </Style>

</ResourceDictionary>